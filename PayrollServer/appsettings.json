{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PayrollDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "FilePath": "Logs/payroll-app-.log"
  },
  "JwtSettings": {
    "Key": "ThisIsASecureKeyWithAtLeast32Characters",
    "Issuer": "PayrollServer",
    "Audience": "PayrollClients",
    "ExpirationInDays": 7
  },
  "EmailSettings": {
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-username",
    "SmtpPassword": "your-password",
    "EnableSsl": true,
    "DefaultFromEmail": "noreply@payrollserver.com",
    "TemplatesPath": "Templates/Emails"
  },
  "AppUrl": "https://localhost:7000",
  "AllowedHosts": "*"
}
